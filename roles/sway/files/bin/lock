#! /usr/bin/env sh

# ensure autolock
~/.config/sway/bin/idle

# lock
if ! pgrep swaylock; then
	/usr/bin/swaylock \
		--screenshots \
		--clock \
		--indicator \
		--indicator-thickness 2 \
		--effect-blur 7x5 \
		--effect-vignette 0.5:0.5 \
		--ring-color bb00cc \
		--key-hl-color 00000066 \
		--line-color 00000000 \
		--inside-color 00000088 \
		--separator-color 00000000 \
		--grace 2 \
		--fade-in 0.5
fi
